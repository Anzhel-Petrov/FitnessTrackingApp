@using static FitnessTrackingApp.Common.GeneralApplicationConstants;

@{
    int currentYear = DateTime.UtcNow.Year;
    string footerNote = (ReleaseYear == currentYear) ?
        $"{currentYear}" : $"{ReleaseYear} - {currentYear}";
    var isTrainer = User?.Identity?.IsAuthenticated == true &&
                    this.User.IsInRole(TrainerRoleName);
    var isCustomer = User?.Identity?.IsAuthenticated == true &&
                    this.User.IsInRole(CustomerRoleName);
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Fitness Tracking App</title>
@*     <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" /> *@
    <link rel="stylesheet" href="~/css/bootstrap.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/FitnessTrackingApp.Web.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Fitness Tracking App </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        @if (isCustomer)
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Customer" asp-action="OverallProgress">Overall Progress</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Customer" asp-action="AvailableTrainers">Available Trainers</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Customer" asp-action="AllWeeklyPlans">All Weekly Plans</a>
                            </li>
                        }
                    </ul>
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>
    <div class="container-fluid">
        <div class="row">
            <!-- Trainer Sidebar -->
            @if (isTrainer)
            {
                <aside class="col-md-3 col-lg-2 bg-light border-end vh-100">
                    <nav class="trainer-dashboard-menu p-3">
                        <h5 class="text-center">Trainer Menu</h5>
                        <ul class="nav flex-column">
                            <li class="nav-item">
                                <a asp-area="Trainer" asp-controller="Dashboard" asp-action="Index" class="nav-link text-dark">
                                    <i class="fas fa-home"></i>Dashboard Home
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="@Url.Action("Pending", "GoalPlan", new { area = "Trainer" })">
                                    <i class="fas fa-clock"></i> Pending Goal Plans
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="@Url.Action("Active", "GoalPlan", new { area = "Trainer" })">
                                    <i class="fas fa-tasks"></i> Active Goal Plans
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="@Url.Action("Details", "WeeklyPlan", new { area = "Trainer" })">
                                    <i class="fas fa-calendar-week"></i> Weekly Plans
                                </a>
                            </li>
                        </ul>
                    </nav>
                </aside>
            }

            <!-- Main Content -->
            <main role="main" class="@(isTrainer ? "col-md-9 col-lg-10" : "col-md-9 offset-md-2 col-lg-8 offset-lg-2") pb-3">
                @RenderBody()
            </main>
        </div>
    </div>


<!-- Footer -->
<footer class="footer bg-light py-1 mt-2">
    <div class="container text-center">
        <span class="text-muted">&copy; 2024 MyApp. All Rights Reserved.</span>
    </div>
</footer>

<script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
