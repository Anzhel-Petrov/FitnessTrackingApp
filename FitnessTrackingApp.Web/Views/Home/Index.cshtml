@{
    ViewData["Title"] = "Home";
}

<div class="container mt-5">
    <!-- Hero Section -->
    <div class="jumbotron bg-primary text-white text-center p-5 rounded">
        <h1 class="display-4">Welcome to MyApp!</h1>
        <p class="lead">Track your progress, achieve your goals, and connect with your trainer seamlessly.</p>
        <hr class="my-4">
        <p>Start your fitness journey today with personalized goal plans and progress tracking.</p>
        <a class="btn btn-light btn-lg" asp-area="" asp-controller="User" asp-action="Register">Get Started</a>
        <a class="btn btn-outline-light btn-lg" asp-area="" asp-controller="User" asp-action="Login">Log In</a>
    </div>

    <!-- Feature Section -->
    <div class="row text-center">
        <div class="col-md-4 mb-4">
            <div class="card h-100 shadow-sm">
                <div class="card-body">
                    <h5 class="card-title">Track Body Weight</h5>
                    <p class="card-text">Log your daily or weekly weight and visualize your progress with intuitive charts.</p>
                </div>
                <div class="card-footer">
                    <a class="btn btn-primary" asp-area="" asp-controller="Customer" asp-action="AllWeeklyPlans">Track Now</a>
                </div>
            </div>
        </div>
        <div class="col-md-4 mb-4">
            <div class="card h-100 shadow-sm">
                <div class="card-body">
                    <h5 class="card-title">Set Goal Plans</h5>
                    <p class="card-text">Collaborate with trainers to set realistic fitness goals and milestones.</p>
                </div>
                <div class="card-footer">
                    <a class="btn btn-primary" asp-area="" asp-controller="Customer" asp-action="AvailableTrainers">Select a Trainer</a>
                </div>
            </div>
        </div>
        <div class="col-md-4 mb-4">
            <div class="card h-100 shadow-sm">
                <div class="card-body">
                    <h5 class="card-title">Monitor Weekly Plans</h5>
                    <p class="card-text">Follow weekly exercise and nutrition plans designed by your trainer.</p>
                </div>
                <div class="card-footer">
                    <a class="btn btn-primary" asp-area="" asp-controller="Customer" asp-action="AllWeeklyPlans">Explore Plans</a>
                </div>
            </div>
        </div>
    </div>

    <!-- Call to Action Section -->
    <div class="text-center mt-5 mb-4">
        <h2>Ready to Transform Your Fitness?</h2>
        <p class="lead">Join now and start achieving your fitness goals with professional guidance!</p>
        <a class="btn btn-success btn-lg" asp-area="" asp-controller="User" asp-action="Register">Sign Up Today</a>
    </div>
</div>
