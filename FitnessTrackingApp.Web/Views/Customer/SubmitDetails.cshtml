@using FitnessTrackingApp.Data.Models.Enums
@using Microsoft.AspNetCore.Mvc.TagHelpers
@model FitnessTrackingApp.Web.ViewModels.Customer.CustomerDetailsInputModel

@if (TempData["ErrorMessage"] != null)
{
<div class="alert alert-danger" role="alert">
    @TempData["ErrorMessage"]
</div>
}

<h2>Provide Your Details</h2>

<form asp-action="SubmitDetails" method="post">
    <input type="hidden" asp-for="TrainerId" />
    <span asp-validation-for="TrainerId" class="text-danger"></span>

    <div class="form-group">
        <label asp-for="GoalType"></label>
        <select asp-for="GoalType" class="form-control" asp-items="Html.GetEnumSelectList<GoalType>()">
            <option>Please choose your goal</option>
        </select>
        <span asp-validation-for="GoalType" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="StartingWeight"></label>
        <input asp-for="StartingWeight" class="form-control" aria-required="true" type="number" step="0.01" />
        <span asp-validation-for="StartingWeight" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="TargetWeight"></label>
        <input asp-for="TargetWeight" class="form-control" aria-required="true" type="number" step="0.01" />
        <span asp-validation-for="TargetWeight" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="AdditionalNotes"></label>
        <textarea asp-for="AdditionalNotes" class="form-control"></textarea>
        <span asp-validation-for="AdditionalNotes" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Submit</button>
</form>