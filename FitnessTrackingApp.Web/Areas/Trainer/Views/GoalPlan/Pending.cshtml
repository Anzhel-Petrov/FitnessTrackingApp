@model IEnumerable<BaseGoalPlanViewModel>

<h2>Pending Goal Plans</h2>

<table class="table">
    <thead>
    <tr>
        <th>Customer</th>
        <th>Goal</th>
        <th>Created On</th>
        <th>Actions</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var plan in Model)
    {
        <tr>
            <td>@plan.CustomerName</td>
            <td>@plan.GoalDescription</td>
            <td>@plan.CreatedOn</td>
            <td>
                <a asp-action="Review" asp-controller="GoalPlan" asp-area="Trainer" asp-route-goalPlanId="@plan.GoalPlanId" class="btn btn-primary">Review</a>
            </td>
        </tr>
    }
    </tbody>
</table>