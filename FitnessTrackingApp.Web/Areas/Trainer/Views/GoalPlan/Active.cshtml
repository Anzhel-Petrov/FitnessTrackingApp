@using FitnessTrackingApp.Web.Infrastructure.Extensions
@model IEnumerable<TrainerGoalPlanViewModel>

@if (TempData["ErrorMessage"] != null)
{
<div class="alert alert-danger" role="alert">
    @TempData["ErrorMessage"]
</div>
}

<h2>Active Goal Plans</h2>

<table class="table">
    <thead>
    <tr>
        <th>Customer</th>
        <th>Goal</th>
        <th>Created On</th>
        <th>Start Weight</th>
        <th>Goal Weight</th>
        <th>Created On</th>
        <th>Actions</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var plan in Model)
    {
        <tr>
                <td>@plan.CustomerName</td>
                <td>@plan.GoalType.GetDisplayName()</td>
                <td>@plan.CreatedOn</td>
                <td>@plan.CurrentWeight</td>
                <td>@plan.GoalWeight</td>
                <td>@plan.CreatedOn</td>
            <td>
                <a asp-area="Trainer" asp-controller="GoalPlan" asp-action="Reject" asp-route-goalPlanId="@plan.GoalPlanId" class="btn btn-danger btn-sm">Reject</a>
                <a asp-area="Trainer" asp-controller="WeeklyPlan" asp-action="Details" asp-route-goalPlanId="@plan.GoalPlanId" class="btn btn-info btn-sm">Details</a>
            </td>
        </tr>
    }
    </tbody>
</table>