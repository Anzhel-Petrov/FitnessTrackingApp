@using FitnessTrackingApp.Web.Infrastructure.Extensions
@model GoalPlanDetailsViewModel

<h2>Review Goal Plan</h2>

<div class="card">
    <div class="card-header">
        Customer: @Model.CustomerName
    </div>
    <div class="card-body">
        <p><strong>Goal:</strong> @Model.GoalType.GetDisplayName()</p>
        <p><strong>Current Weight:</strong> @Model.CurrentWeight kg</p>
        <p><strong>Details:</strong> @Model.CustomerDetails</p>
        <p><strong>Submitted On:</strong> @Model.SubmittedOn?.ToShortDateString()</p>
    </div>
</div>

<form asp-action="Process" asp-controller="GoalPlan" asp-area="Trainer" method="post">
    <input type="hidden" name="goalPlanId" value="@Model.GoalPlanId" />
    <button type="submit" name="approve" value="true" class="btn btn-success">Approve</button>
    <button type="submit" name="approve" value="false" class="btn btn-danger">Reject</button>
</form>