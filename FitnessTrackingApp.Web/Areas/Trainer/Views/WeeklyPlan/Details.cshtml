@model TrainerWeeklyPlanViewModel

<h2>Weekly Plans for customer: @Model.CustomerName</h2>

<table class="table table-striped">
    <thead>
    <tr>
        <th>Week</th>
        <th>Carb</th>
        <th>Fat</th>
        <th>Protein</th>
        <th>ABW</th>
        <th>Total Daily Calories</th>
        <th>Sessions</th>
        <th>HIIT</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var plan in Model.WeeklyPlanViewModels)
    {
        <tr>
            <td>@plan.WeekNumber</td>
            <td>@plan.Carbohydrates</td>
            <td>@plan.Fat</td>
            <td>@plan.Protein</td>
            <td>@plan.Weight.ToString("0.0") kg</td>
            <td>@plan.TotalDailyCalories</td>
            <td>@plan.CardioSessions x / wk (@plan.CardioType)</td>
            <td>@(plan.IsHIIT ? "Yes" : "No")</td>
        </tr>
    }
    </tbody>
</table>
<td>
    <a asp-area="Trainer" asp-controller="GoalPlan" asp-action="AssignWeeklyPlan" asp-route-nextWeek="@Model.NextWeek" asp-route-goalPlanId="@Model.GoalPlanId" class="btn btn-primary">Assign Weekly Plan</a>
</td>